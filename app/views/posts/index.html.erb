<div class="user-profile">
  <div class="profile row">
    <div class="col-md-4 avatar">
      <div class="wrapper">
        <img src="http://www.freeimageslive.com/galleries/buildings/london/pics/coventgarden.jpg">
      </div>
    </div>
    
    <div class="col-md-8 basic-info">
      <div class="user-wrapper">
        <h2 class="username">the_original<%= session[:first_name].downcase%></h2>
        <a class="edit-profile">
          <button>Edit Profile</button>
        </a>
      </div>
      <ul class="posts">
        <li><span>12</span> posts</li>
        <li><span>0</span> followers</li>
        <li><span>0</span> following</li>
      </ul>
      <h2 class="name"><%= session[:first_name]%></h2>
      <a class="website"><%= session[:first_name].downcase%>.com</a><br>
      <a href="https://github.com/Odrakes1992" class="website">https://github.com/Odrakes1992</a>
      <a class="edit-profile">
          <button>Create Post</button>
      </a> 
    </div>
  </div>
</div>

<div class="user-tabs">
  <a class="tab active" href="">
    <i class="fa fa-th"></i>
    POSTS
  </a>
  <a class="tab" href="">
    <i class="fa fa-tv"></i>
    IGTV
  </a>
  <a class="tab" href="">
    <i class="fa fa-bookmark"></i>
    SAVED
  </a>
  <a class="tab" href="">
    <i class="fa fa-tag"></i>
    TAGGED
  </a>
</div>


<!--
<div> Welcome to your feed <%= session[:first_name]%> </div> <br>
<div> This is the user(using current.user.first_name) : <%=Current.user.first_name%> </div>
-->


<div>
<%= link_to new_post_path do %>
  Create a new post
<% end %>
</div>

<div class="user-images">
<% @posts.each do |post| %>
<% if post.user_id == Current.user.id %>
<div class="wrapper">
  <p><%= post.message %></p>
  <% if post.image.attached?%>
  <img src="<%=(url_for(post.image))%>"/> 
  <% else %>
<img src="https://scx1.b-cdn.net/csz/news/800/2017/theoreticala.jpg">
<% end %>
</div>
<% end %>
<%end%>
</div>

<%= button_to 'Logout', logout_path, method: :delete %>

